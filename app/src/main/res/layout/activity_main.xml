<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".app.activites.HomeActivity">


    <WebView
        android:id="@+id/chatbotWebView"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="70dp"
        android:background="@android:color/transparent"
        android:elevation="10dp"
        android:padding="80dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ======================= THAY ĐỔI Ở ĐÂY ======================= -->
    <!-- Đặt lại Guideline về 30% để tạo không gian cho phần header màu tím -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0" />
    <!-- =============================================================== -->


    <!-- Nội dung chính có thể cuộn -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_round_white_top_bottom"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/slide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 1. Danh sách 6 nút chức năng -->

            <!-- 2. Mục tiến độ học tập (nằm dưới 6 nút) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                tools:itemCount="3"
                tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/item_action_home"
                tools:spanCount="2" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="#F3E5F5"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tv_progress_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiến độ học tập và ôn thi"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Biểu đồ tròn tiến độ -->
                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progress_circular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:progress="75"
                        app:indicatorColor="#4CAF50"
                        app:indicatorSize="80dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_progress_title"
                        app:trackColor="#E1BEE7"
                        app:trackCornerRadius="5dp"
                        app:trackThickness="8dp" />

                    <!-- Văn bản % bên trong biểu đồ -->
                    <TextView
                        android:id="@+id/tv_progress_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/tv_progress_subtitle"
                        app:layout_constraintEnd_toEndOf="@id/progress_circular"
                        app:layout_constraintStart_toStartOf="@id/progress_circular"
                        app:layout_constraintTop_toTopOf="@id/progress_circular"
                        app:layout_constraintVertical_chainStyle="packed"
                        tools:text="75%" />

                    <TextView
                        android:id="@+id/tv_progress_subtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Lý thuyết"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="@id/progress_circular"
                        app:layout_constraintEnd_toEndOf="@id/progress_circular"
                        app:layout_constraintStart_toStartOf="@id/progress_circular"
                        app:layout_constraintTop_toBottomOf="@id/tv_progress_percentage"
                        tools:ignore="SmallSp" />

                    <!-- Text "Đã làm:" -->
                    <TextView
                        android:id="@+id/tv_questions_done_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Đã làm:"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/progress_circular"
                        app:layout_constraintTop_toTopOf="@id/progress_circular" />

                    <!-- Giá trị "127/200 câu" -->
                    <TextView
                        android:id="@+id/tv_questions_done_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/tv_questions_done_label"
                        app:layout_constraintStart_toEndOf="@id/tv_questions_done_label"
                        app:layout_constraintTop_toTopOf="@id/tv_questions_done_label"
                        tools:text="127/200 câu" />

                    <!-- ProgressBar cho số câu đã làm -->
                    <ProgressBar
                        android:id="@+id/progress_bar_questions"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="6dp"
                        android:layout_marginTop="4dp"
                        android:progressDrawable="@drawable/custom_progress_bar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tv_questions_done_label"
                        app:layout_constraintTop_toBottomOf="@id/tv_questions_done_value"
                        tools:progress="60" />

                    <!-- Text "Tỉ lệ đúng:" -->
                    <TextView
                        android:id="@+id/tv_correct_rate_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Tỉ lệ đúng:"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@id/tv_questions_done_label"
                        app:layout_constraintTop_toBottomOf="@id/progress_bar_questions" />

                    <!-- Giá trị "85%" -->
                    <TextView
                        android:id="@+id/tv_correct_rate_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/tv_correct_rate_label"
                        app:layout_constraintStart_toEndOf="@id/tv_correct_rate_label"
                        app:layout_constraintTop_toTopOf="@id/tv_correct_rate_label"
                        tools:text="85%" />

                    <!-- ProgressBar cho tỉ lệ đúng -->
                    <ProgressBar
                        android:id="@+id/progress_bar_correct_rate"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="6dp"
                        android:layout_marginTop="4dp"
                        android:progressDrawable="@drawable/custom_progress_bar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tv_correct_rate_label"
                        app:layout_constraintTop_toBottomOf="@id/tv_correct_rate_value"
                        tools:progress="85" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <ViewFlipper
        android:id="@+id/slide"
        android:layout_width="0dp"
        android:layout_height="182dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_icon_border"
        android:backgroundTint="@color/teal_200"
        android:contentDescription="Mở chatbot"
        android:src="@drawable/ic_chatbot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
